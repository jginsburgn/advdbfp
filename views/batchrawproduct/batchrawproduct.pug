//-available variables are productname, productid, title, verb, action, unit
//-maybe amount and expd, expm, expy, brpid.
doctype html
html(lang="en")
    head
        meta(http-equiv="cache-control", content="max-age=0")
        meta(http-equiv="cache-control", content="no-cache")
        meta(http-equiv="expires", content="0")
        meta(http-equiv="expires", content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma", content="no-cache")
        title=title
    body
        center
            h1=title
            form(method="post")
                input(type="hidden", name="action", value=action)
                input(type="hidden", name="brpid", value=brpid)
                input(type="hidden", name="pid", value=productid)
                input(type="hidden", name="pname", value=productname)
                input(type="hidden", name="unit", value=unit)
                =verb + " "
                input(name="amount", value=amount, size="4", style="text-align:right;")
                - var formatunit = " " + unit + "(s)"
                =formatunit
                br
                br
                | Expire on:
                input(name="expd", size="3", placeholder="dd", value=expd)
                | &nbsp/&nbsp
                input(name="expm", size="3", placeholder="mm", value=expm)
                | &nbsp/&nbsp
                input(name="expy", size="4", placeholder="yyyy", value=expy)
                br
                br
                input(type="submit", value=verb)
            br
            form(method="post")
                input(type="hidden", name="action", value="show")
                input(type="hidden", name="id", value=productid)
                input(type="hidden", name="pname", value=productname)
                input(type="hidden", name="unit", value=unit)
                input(type="submit", value="Back")
