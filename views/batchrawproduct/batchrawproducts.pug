doctype html
html(lang="en")
    head
        link(href='/css/styleshowproducts.css', rel='stylesheet')
        link(rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Tangerine")
        meta(http-equiv="cache-control", content="max-age=0")
        meta(http-equiv="cache-control", content="no-cache")
        meta(http-equiv="expires", content="0")
        meta(http-equiv="expires", content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma", content="no-cache")
        title Edit
    body
        center
            - var tit = "Showing Batches of Raw Product: " + titlename
            h1=tit
        ul
            - var i = 0
            each val, index in brps
                - i++
                - var formattedcount = "Batch number: " + i
                li=formattedcount
                    br
                    form(method="post", class = "lineaBotones")
                        input(type="hidden",name="action",value="delete")
                        input(type="hidden",name="id",value=val._id)
                        input(type="hidden", name="productid", value=productid)
                        input(type="hidden", name="unit", value=unit)
                        input(type="hidden", name="productname", value=titlename)
                        input(type="submit",value="Delete")
                    form(method="post", class = "lineaBotones")
                        input(type="hidden",name="action",value="edit")
                        input(type="hidden",name="id",value=val._id)
                        input(type="hidden", name="productid", value=productid)
                        input(type="hidden",name="amount",value=val.amount)
                        input(type="hidden",name="expd",value=val.expD)
                        input(type="hidden",name="expm",value=val.expM)
                        input(type="hidden",name="expy",value=val.expY)
                        input(type="hidden", name="unit", value=unit)
                        input(type="hidden", name="productname", value=titlename)
                        input(type="submit",value="Edit")
                br
                ul
                    - var formatamount = "Batch amount: " + val.amount + " " + unit + "(s)"
                    - var formatdate =  "Expires on: " + val.expD + "/" + val.expM + "/" + val.expY
                    li=formatamount
                    li=formatdate
                    br
                    br
        center
            form(method="post")
                input(type="hidden",name="action",value="add")
                input(type="hidden", name="productname", value=titlename)
                input(type="hidden", name="productid", value=productid)
                input(type="hidden", name="unit", value=unit)
                input(type="submit", value="Add Batch for Raw Product")
            br
            form(action="/editrawproduct", method="get")
                input(type="submit", value="Back")
