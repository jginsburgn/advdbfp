doctype html
html(lang="en")
    head

        meta(http-equiv="cache-control", content="max-age=0")
        meta(http-equiv="cache-control", content="no-cache")
        meta(http-equiv="expires", content="0")
        meta(http-equiv="expires", content="Tue, 01 Jan 1980 1:00:00 GMT")
        meta(http-equiv="pragma", content="no-cache")
        title Edit
    body
        center
            - var tit = "Showing Batches of Raw Product: " + titlename
            h1=tit
        ul
            - var i = 0
            each val, index in brps
                - i++
                - var formattedcount = "Batch number: " + i
                li=formattedcount
                    form(method="post")
                        input(type="hidden",name="action",value="delete")
                        input(type="hidden",name="id",value=val._id)
                        input(type="submit",value="Delete")
                    form(method="post")
                        input(type="hidden",name="action",value="edit")
                        input(type="hidden",name="id",value=val._id)
                        input(type="submit",value="Edit")
                ul
                    - var formatamount = "Batch amount " + val.amount
                    - var formatdate =  "Expires on: " + val.expD + "/" + val.expM + "/" + val.expY
                    li=formatamount
                    li=formatdate
        center
            form(action="/editrawproduct", method="get")
                input(type="submit", value="Back")
            br
            form(action="#", method="get")
                input(type="submit", value="Add Batch for Raw Product")
